#include <SFML/Graphics.hpp>
#include "vrpn_Tracker.h"

#include <iostream>
#include <cmath> 
#include "Winuser.h"

using namespace std;

double x_spine;
double y_spine;

int newX;
int newY;
//double spine; // 3
double y_leftHand;//7
double y_rightHand;//11
double x_leftHand;
double x_rightHand;

double x_head;
double y_head;
double x_POS;
double y_POS;

double result;
int state = 0;// change color
int stateShape = 0;
int previousState = 0;

sf::Color ColorToChange;

void changeShapeCircle(){
	sf::CircleShape shape(100.f);
	stateShape = 0;
}

void changeShapeRect(){
	// define a 120x50 rectangle
	sf::RectangleShape shape(sf::Vector2f(120, 50));
	stateShape = 1;

}

void changeBlue(){
	ColorToChange = sf::Color::Blue;
	state = 1;
}

void changeRed(){
	ColorToChange = sf::Color::Red;
	state = 0;
}


void VRPN_CALLBACK handle_tracker(void* userData, const vrpn_TRACKERCB b)
{
	if (b.sensor == 3) {
		x_spine = b.pos[0];
		y_spine = b.pos[1];
	}

	if (b.sensor == 0) {
		y_head = b.pos[1];
		x_head = b.pos[0];
	}

	if (b.sensor == 7) {
		y_leftHand = b.pos[1];
		x_leftHand = b.pos[0];
	}


	if (b.sensor == 11 && state == 1) {

		y_rightHand = b.pos[1];
		x_rightHand = b.pos[0];
		int newX = (x_rightHand - x_head + 0.3) * 1960;
		int newY = -(y_rightHand - y_head) * 1020;
		
		// SetCursorPos(newX, newY);

	}

	result = abs(x_leftHand - x_rightHand);

	//Motion State
	if (result < 0.4) {
		cout << "change Blue\n";
		if (state == 0) {
			changeBlue();
		}
	}

	if (y_head < y_leftHand && y_head < y_rightHand){
		if (state == 1){
			cout << "change RED\n";
			changeRed();
		}
	}


	if (y_head < y_rightHand){
		if (stateShape == 0){
			cout << "change RECTANGLE\n";
			changeShapeRect();
		}
	}

	if (y_head < y_leftHand){
		if (stateShape == 1){
			cout << "change CIRCLE\n";
			changeShapeCircle();
		}
	}
}

int main(int argc, char* argv[])
{

	ColorToChange = sf::Color::Green;

	sf::RenderWindow window(sf::VideoMode(200, 200), "SFML works!");
	sf::CircleShape shape(100.f);

	vrpn_Tracker_Remote* vrpnTracker0 = new vrpn_Tracker_Remote("Tracker0@10.4.130.58:3883");//Changer en local
	vrpnTracker0->register_change_handler(0, handle_tracker);
	while (1)
	{
		vrpnTracker0->mainloop();
		Sleep(100);

		//change color taking into account the interaction
		shape.setFillColor(ColorToChange);
		if (window.isOpen())
		{
			sf::Event event;
			while (window.pollEvent(event))
			{
				if (event.type == sf::Event::Closed)
					window.close();
			}

			window.clear();
			window.draw(shape);
			window.display();
		}


	}

	return 0;
}
